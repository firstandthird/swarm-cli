#!/bin/bash

if [ "$1" == "_description" ]; then
  echo "[service] [secretFile] [source] [target]"
  exit
fi

main() {
  local service=$1
  local secretFile=$2
  local source=$3
  local target=$4
  if test -z "$target"; then
    target=$source
  fi
  . $DIR/swarm-secret $secretFile ${source}.1
  . $DIR/swarm-shell "docker service update $service --secret-rm $source --secret-add source=${source}.1,target=${target}"
  log "removing old secret file"
  . $DIR/swarm-shell "docker secret rm ${source}"
  . $DIR/swarm-secret $secretFile ${source}
  . $DIR/swarm-shell "docker service update $service --secret-rm ${source}.1 --secret-add source=${source},target=${target}"
  . $DIR/swarm-shell "docker secret rm ${source}.1"
}
main "$@"
