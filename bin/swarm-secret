#!/bin/bash
if [ "$1" == "_description" ]; then
  echo "[secretFile] [name]"
  exit
fi

main() {
  local configFile=$1
  local name=$2
  if test -z "$configFile"; then
    . $DIR/swarm-shell "docker secret ls"
    exit 0
  fi
  if test -z "$name"; then
    name=$configFile
  fi
  . $DIR/swarm-copy $configFile
  . $DIR/swarm-shell "docker secret create $name $configFile"
  . $DIR/swarm-shell "docker secret ls"
}
main "$@"
