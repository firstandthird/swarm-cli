#!/bin/bash
set -e

VERSION=0.0.1
DIR=$(dirname $0)
SSH_USER=docker

log() {
  echo -e "  \e[33m$@\e[39m"
}

abort() {
  echo
  echo -e "  \e[31m$@\e[39m" 1>&2
  echo
  exit 1
}

usage() {
  cat <<-EOF

  Usage: swarm [command]

  Commands:

EOF

for f in $DIR/swarm-*; do
  cmd=${f:6}
  printf "    %s %s\n" "$cmd" "$($f _description)"
done
echo

exit
}

version() {
  echo $VERSION
}

if test -z "$SERVER_HOST"; then
  log "SERVER_HOST not set, running commands locally"
fi

if [ "$#" == 0 ]; then
  usage
fi

CMD=$1
shift
case $CMD in
  --version)
    version
    exit
    ;;
  *)
    exec="$DIR/swarm-$CMD"
    if [ -f "$exec" ]; then
      . $exec "$@"
    else
      . $DIR/swarm-shell $CMD $@
    fi
    ;;
esac


